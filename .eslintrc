{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "bracketSpacing": true,
        "printWidth": 80,
        "singleQuote": true,
        "tabWidth": 2,
        "trailingComma": "all"
      }
    ],
    "import/prefer-default-export": "off",
    "class-methods-use-this": "off",
    "flowtype/space-after-type-colon": "off"
  },
  "plugins": ["prettier", "jest"],
  "extends": [
    "airbnb-base",
    "plugin:prettier/recommended",
  ],
  "env": {
    "jest/globals": true
  }
}
